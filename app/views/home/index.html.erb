<section class="hero is-light is-bold">
  <div class="hero-body">
    <div class="container">
      <h1 class="title">
        <% if current_user %>
          <%= "#{current_user.username}" %>
        <% else %>
        <h2 class="subtitle">
          Welcome to API curious an app created to discover Github API
        </h2>
        <% end %>
      </h1>
    </div>
  </div>
</section>
<br><br>

<% if current_user %>
<div class="tile is-ancestor">
<div class="tile is-vertical is-6">
  <div class="tile">
    <div class="tile is-parent is-vertical">
      <article class="tile is-child notification is-danger">
        <p class="title">Repositories</p>
        <p class="subtitle">A list of all my repositories</p>
      </article>
      <article class="tile is-child notification is-warning">
        <p class="title">Starred Repositories</p>
        <p class="subtitle">A list of all my starred repositories</p>
      </article>
    </div>
    <div class="tile is-parent">
      <article class="tile is-child notification is-info">
        <p class="title">Followers and Following</p>
        <p class="subtitle">A list of my followers</p>
      </article>
    </div>
  </div>
</div>
</div>
<% end %>
